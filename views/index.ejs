<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Up</title>
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
</head>
<body>
    
    <h1>Submit Food Order</h1>
    <form action="" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" />
        </div>
        <div>
            <label for="breakfast">Breakfast</label>
            <input type="text" id="breakfast" name="breakfast" />
        </div>
        <div>
            <label for="lunch">Lunch</label>
            <input type="text" id="lunch" name="lunch" />
        </div>
        <button type="submit">Submit</button>
    </form>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2>Select Insurance</h2>
                <ul>
                    <% sheetNames.forEach(sheetName => { %>
                        <li>
                            <button id="btn-<%= sheetName %>" 
                                onclick="handleButtonClick('<%= sheetName %>')" 
                                class="panel">
                                <img src="path/to/your/image.png" class="panel-image" />
                                <span class="panel-text"><%= sheetName %></span>
                            </button>
                    <% }) %>
                </ul>
            </div>
            <div class="col">
               
            </div>
        </div>
    </div>

    <script src="assets/js/app.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
</body>
</html>