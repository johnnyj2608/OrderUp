<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header align-items-center justify-content-between">
            <div class="col-auto p-0">
                <button class="mute-button" id="muteButton">
                    <i class="fas fa-volume-mute"></i>
                </button>
            </div>
            <div class="col text-center">
                <%= __("project_title") %>
            </div>
            <div class="col-auto p-0">
                <div class="dropdown">
                    <div class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-language"></i>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("english") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("chinese") %></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="row">
                <div class="col text-center">
                    <h3 id="nameUnits"><%- __("order_message", { name: name, units: units }) %></h3>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="container">
                        <h2 id="breakfast-section"><%= __("breakfast") %></h2>
                        <% menuData.breakfast.titles.forEach((title, index) => { %>
                            <% if (index % 4 === 0) { %>
                                <div class="row">
                            <% } %>
                            
                            <div class="col-md-3 mb-3">
                                <div id="btn-<%= title %>" 
                                    data-text="<%= title %>" 
                                    onclick="handleMealClick('Breakfast', '<%= title %>'); speakText(this.getAttribute('data-text'))" 
                                    class="panel w-100" 
                                    data-order="<%= index %>">
                                    <img src="<%= menuData.breakfast.images[index] || '/img/default.png' %>" 
                                    class="panel-img w-100" />
                                    <h5 class="panel-title"><%= title %></h5>
                                </div>
                            </div>
            
                            <% if ((index + 1) % 4 === 0 || index === menuData.breakfast.titles.length - 1) { %>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="container">
                        <h2 id="lunch-section"><%= __("lunch") %></h2>
                        <% menuData.lunch.titles.forEach((title, index) => { %>
                            <% if (index % 4 === 0) { %>
                                <div class="row">
                            <% } %>
                            
                            <div class="col-md-3 mb-3">
                                <div id="btn-<%= title %>" 
                                    data-text="<%= title %>" 
                                    onclick="handleMealClick('Lunch', '<%= title %>'); speakText(this.getAttribute('data-text'))" 
                                    class="panel w-100" 
                                    data-order="<%= index %>">
                                    <img src="<%= menuData.lunch.images[index] || '/img/default.png' %>"  
                                    class="panel-img w-100" />
                                    <h5 class="panel-title"><%= title %></h5>
                                </div>
                            </div>

                            <% if ((index + 1) % 4 === 0 || index === menuData.lunch.titles.length - 1) { %>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row footer align-items-center">
            <div class="col d-flex justify-content-between">
                <button id="backButton" class="actionButton"><%= __("back") %></button>
                <button id="submitButton" class="actionButton disabled"><%= __("submit_order") %></button>
            </div>
        </div>

        <div id="errorOverlay" class="alert-overlay">
            <div id="errorMessage" class="alert-message">
                
            </div>
        </div>

        <div id="afkOverlay" class="alert-overlay">
            <div id="afkMessage" class="alert-message"
                 data-static-msg="<%= __("inactivity") %>"
                 data-click-msg="<%= __("click_anywhere") %>"
                 data-countdown="<%= __("redirect_countdown", { seconds: '{{seconds}}' }) %>">
            </div>
        </div>

        <div id="confirmationOverlay" class="alert-overlay">
            <div id="confirmationMessage" class="alert-message"
                data-static-msg="<%= __("submitted") %>"
                data-click-msg="<%= __("click_anywhere") %>"
                data-countdown="<%= __("redirect_countdown", { seconds: '{{seconds}}' }) %>">
            </div>
        </div>
        
    </div>
    
    <script src="/js/menu.js"></script>
    <script src="/js/afk.js"></script>
    <script src="/js/tts.js"></script>
    <script src="/js/settings.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>