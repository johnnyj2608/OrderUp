<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Up</title>
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <p>Hello <span id="name"></span>,</p>
                <p>You may order <strong><span id="units"></span></strong> more times this week</p>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col text-center">
                <h2>Select Breakfast</h2>
                <ul>
                    <% menuData.breakfast.titles.forEach((title, index) => { %>
                        <li>
                            <button id="btn-<%= title %>" 
                                onclick="handleBreakfastClick('<%= title %>')" 
                                class="panel"
                                data-order="<%= index %>">
                                <img src= "<%= menuData.breakfast.images[index] %>" class="panel-image" />
                                <span class="panel-text"><%= title %></span>
                            </button>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <h2>Select Lunch</h2>
                <ul>
                    <% menuData.lunch.titles.forEach((title, index) => { %>
                        <li>
                            <button id="btn-<%= title %>" 
                                onclick="handleLunchClick('<%= title %>')" 
                                class="panel"
                                data-order="<%= index %>">
                                <img src= "<%= menuData.lunch.images[index] %>" class="panel-image" />
                                <span class="panel-text"><%= title %></span>
                            </button>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="footer-bar">
        <button id="submitButton" class="disabled">Submit</button>
    </div>

    <script src="assets/js/menu.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
</body>
</html>