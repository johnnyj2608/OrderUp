<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Up</title>
    <link rel="stylesheet" href="assets/css/styles.css" />
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
</head>
<body">
    <div class="container-fluid">
        <div class="row header align-items-center">
            <div class="col text-center">
                <h1><%= __("ASCC") %></h1>
            </div>
        </div>
        <div>
            <div class="row content">
                <div class="col text-center">
                    <br>
                    <% sheetNames.forEach((sheetName, index) => { %>
                        <% if (index % 2 === 0) { %>
                            <div class="row">
                        <% } %>
    
                        <div class="col-md-6 mb-3 text-center">
                            <button id="btn-<%= sheetName %>" 
                                onclick="handleButtonClick('<%= sheetName %>')" 
                                class="panel w-100">
                                <img src="<%= insuranceImgMap[sheetName.replace(/\s/g,'')] || '/assets/img/crown.png' %>" class="panel-img img-padding w-100" />
                                <h5 class="panel-title"><%= sheetName %></h5>
                            </button>
                        </div>
    
                        <% if ((index + 1) % 2 === 0 || index === sheetNames.length - 1) { %>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <div class="col text-center align-items-center">
                    <br>
                    <div id="numberPad">
                        <div id="display"></div>
                        <div id="numberSpace">
                            <div class="numBtn">1</div>
                            <div class="numBtn">2</div>
                            <div class="numBtn">3</div>
                            <div class="numBtn">4</div>
                            <div class="numBtn">5</div>
                            <div class="numBtn">6</div>
                            <div class="numBtn">7</div>
                            <div class="numBtn">8</div>
                            <div class="numBtn">9</div>
                            <div id="clearBtn"><%= __("clear") %></div>
                            <div class="numBtn">0</div>
                            <div id="backBtn"><%= __("back") %></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row footer align-items-center">
                <div class="col text-center">
                    <button id="nextButton" class="actionButton disabled"><%= __("view_menu") %></button>
                </div>
            </div>
        </div>
    </div>

    <div id="errorOverlay" class="alert-overlay">
        <div id="errorMessage" class="alert-message">
            
        </div>
    </div>

    <div id="afkOverlay" class="alert-overlay">
        <div id="afkMessage" class="alert-message"
            message="<%= __("inactivity", { seconds: '{{seconds}}' }) %>">
        </div>
    </div>

    <script src="assets/js/main.js"></script>
    <script src="assets/js/afk.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
</body>
</html>